@model MyLibrary.ViewModels.MyFavoritesVM
@using MyLibrary.Models
@{
    ViewBag.Title = "MyFavorite";
}

<head>
    <meta charset="utf-8">
    <link href="~/Content/listStyle.css" rel="stylesheet" type="text/css">
</head>
<body>
    @using (Html.BeginForm())
    {
        <h2>My favorite books</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Like</th>
            </tr>
            @foreach (Book b in Model.books)
            {
                <tr>
                    <td>@Html.DisplayFor(m => b.bookId)</td>
                    <td>@Html.DisplayFor(m => b.title)</td>
                    <td>@Html.DisplayFor(m => b.author)</td>
                    <td>@Html.DisplayFor(m => b.year)</td>
                    <td><input type="button" value="I DON'T LIKE IT" onclick="location.href='@Url.Action("RemoveFromFavorites", "Home", new {id = b.bookId})'"></td>
                </tr>
            }
        </table>
    }
</body>